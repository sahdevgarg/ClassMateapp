<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/textheadingcolor</item>
        <item name="colorControlActivated">@color/textheadingcolor</item>
        <item name="colorControlHighlight">@color/textheadingcolor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlNormal">#EF9A9A</item>
        <item name="colorControlActivated">#fbfbfb</item>
        <item name="colorControlHighlight">@color/textheadingcolor</item>
    </style>

    <style name="fullscreen" parent="android:Theme.Black.NoTitleBar.Fullscreen">
        <item name="colorControlNormal">@color/textheadingcolor</item>
        <item name="colorControlActivated">@color/textheadingcolor</item>
        <item name="colorControlHighlight">@color/textheadingcolor</item>
    </style>
    <style name="kycfullscreen" parent="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        <item name="colorControlNormal">#212121</item>
        <item name="colorControlActivated">#757575</item><!--underline color-->
    </style>
    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textheadingcolor</item>
    </style>


    <!-- anurag styles-->

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>


    <style name="CheckBox" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>


    <style name="Widget" />

    <style name="Widget.AppTheme" />

    <style name="Widget.AppTheme.EventEditView">
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
    </style>

    <style name="Widget.AppTheme.EventEditView.TextView">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.AppTheme.EventEditView.TextView.Selectable">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.AppTheme.EventEditView.TextView.Selectable.End">
        <item name="android:gravity">center_vertical|end</item>
    </style>

    <style name="TextAppearance.AppTheme.Hint" parent="TextAppearance.Design.Hint" />

    <style name="TextAppearance.AppTheme.Hint.Disabled">
        <item name="android:textColor">?android:attr/textColorHint</item>
    </style>

    <style name="Widget.AppTheme.TextView" />

    <style name="Widget.AppTheme.TextView.Weather">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/padding_text</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:paddingTop">@dimen/padding_text</item>
        <item name="android:paddingBottom">@dimen/padding_text</item>
    </style>

    <style name="Widget.AppTheme.Drawer">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item>
    </style>



</resources>
