<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="3dp"
        android:background="#F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/batch_attendance_button_left"
            android:layout_width="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/ic_chevron_left"
            android:layout_height="wrap_content"
            />

        <com.htlconline.sm.classmate.Batch.CircleView
            android:layout_width="65dp"
            android:id="@+id/circle_1"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
             />

        <com.htlconline.sm.classmate.Batch.CircleView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:id="@+id/circle_2"
             />

        <com.htlconline.sm.classmate.Batch.CircleView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"

            android:id="@+id/circle_3"
             />

        <com.htlconline.sm.classmate.Batch.CircleView
            android:layout_width="65dp"
            android:id="@+id/circle_4"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
             />

        <ImageButton
            android:id="@+id/dbatch_attendance_button_right"
            android:layout_width="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/ic_chevron_right"
            android:layout_height="wrap_content"
            />




    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/batch_attendance_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">


    </android.support.v7.widget.RecyclerView>
</LinearLayout>