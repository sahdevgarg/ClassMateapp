<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:stateListAnimator="@animator/comment_selection"
        android:id="@+id/batch_lesson_plan_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/batch_lesson_plan_chapter"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/batch_chapter_circle"
                    android:gravity="center_horizontal|center"
                    android:text="1"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/batch_lesson_plan_chap_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:text="Light"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/batch_lesson_plan_toggle"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_expand_more_black_24dp" />


            </LinearLayout>

            <ListView
                android:visibility="gone"
                android:id="@+id/batch_lesson_plan_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>