<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="#F5F5F5"
    tools:context="com.htlconline.sm.classmate.Batch.BatchActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#FaFaFa">

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/batch_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Batch Title"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/batch_academic_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="5dp"
                        android:text="2016-2017"
                        android:textSize="20sp" />


                </LinearLayout>

                <View
                    android:padding="3dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/summary_academic_year"
                        android:text="Academic Year : "
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_toRightOf="@id/summary_academic_year"
                        android:id="@+id/summary_academic_year_value"
                        android:text="2016-2017"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/summary_product"
                        android:text="Product : "
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_toRightOf="@id/summary_product"
                        android:id="@+id/summary_product_value"
                        android:text="2016-2017"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/summary_centre"
                        android:text="Centre : "
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_toRightOf="@id/summary_centre"
                        android:id="@+id/summary_centre_value"
                        android:text="2016-2017"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/summary_subject"
                        android:text="Subject: "
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_toRightOf="@id/summary_subject"
                        android:id="@+id/summary_subject_value"
                        android:text="2016-2017"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/summary_instructor"
                        android:text="Instructor: "
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_toRightOf="@id/summary_instructor"
                        android:id="@+id/summary_instructor_value"
                        android:text="2016-2017"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <LinearLayout
               android:orientation="vertical"
               android:layout_margin="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <TextView
                   android:padding="5dp"
                   android:textSize="20sp"
                   android:text="Attendance Summary"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
               <View
                   android:padding="3dp"
                   android:background="@android:color/darker_gray"
                   android:layout_marginBottom="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="1dp"/>

               <com.github.mikephil.charting.charts.PieChart
                   android:id="@+id/summary_attendance_chart"
                   android:layout_width="match_parent"
                   android:layout_height="300dp">

               </com.github.mikephil.charting.charts.PieChart>



           </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
